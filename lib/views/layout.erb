<!doctype html>
<html class="no-js" lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Gluttony</title>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/foundation.css">
    <link rel="stylesheet" href="/css/app.css">

  </head>

  <body>
    <div class="grid-x grid-padding-x">
      <div class="cell">
        <center><img src="../img/logo.png" alt="" class=".logo" style="margion: 1000px;"></center>
      </div>
      <div class="cell">
        <div class="card shadow radius padding-1">
          <ul class="menu">
            <li><a href="/" class="menu-item"></i>Food Menu</a></li>
            <li><a href="#" class="menu-item">About</a></li>
            <% if current_user %>
              <li><a href="#" class="menu-item">Logged in as <%= current_user.username %></a></li>
              <li><a href="/auth/logout" class="menu-item">Sign out</a></li>
            <% else %>
              <li><a href="#" class="menu-item">Register</a></li>
              <li><a href="/auth/login" class="menu-item">Sign in</a></li>
            <% end %>
          </ul>
        </div>
      </div>

      <% if flash[:success] %>
        <div class="cell">
          <div class="card shadow radius padding-1">
            <div class="panel callout radius">
              <div style="color:green;">
                <%= flash[:success] %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <% if flash[:error] %>
        <div class="cell">
          <div class="card shadow radius padding-1">
            <div class="panel callout radius">
              <div style="color:red;">
                <%= flash[:error] %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    <%= yield %>

    </div>

    <script src="../js/vendor/jquery.js"></script>
    <script src="../js/vendor/what-input.js"></script>
    <script src="../js/vendor/foundation.js"></script>
    <script src="../js/app.js"></script>
  </body>
</html>
